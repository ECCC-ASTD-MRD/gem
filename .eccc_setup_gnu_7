#!/bin/bash

# Source this file to:
# - Load libraries
# - Set compiler version
# - Load a script for common setup to all compilers

# To compile with GNU, you must load the code-tools first:
. r.load.dot rpn/code-tools/1.5.1

. ssmuse-sh -x /fs/ssm/main/opt/openmpi/openmpi-3.1.2--hpcx-2.4.0-mofed-4.6--gcc
. ssmuse-sh -x /fs/ssm/main/opt/openmpi-setup/openmpi-setup-0.2
. ssmuse-sh -x /fs/ssm/main/opt/numa/numa-2.0.14

. ssmuse-sh -x main/opt/cmake/cmake-3.21.1

export COMPILER_SUITE=gnu

COMPILER_VERSION=$(project/compiler.sh gnu)
export COMPILER_VERSION

. ./.common_setup ${COMPILER_SUITE}

