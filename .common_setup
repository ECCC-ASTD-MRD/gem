#!/bin/bash

# Source this file to:
# - set some environment variables

if [[ $# -eq 0 ]] ; then
    echo "Usage:   . ./common_eccc_setup compiler_suite"
    echo "Example: . ./common_eccc_setup gnu"
    echo "Example: . ./common_eccc_setup intel"
else
    unset GEM_ARCH GEM_WORK GEM_DIR GEM_GIT_DIR

    COMPILER_suite=${1}
    platform=$(project/os.sh)
    if [ -z ${COMPILER_version} ] ; then
        COMPILER_version=$(project/compiler.sh ${COMPILER_suite})
    fi
    export COMPILER_version

    if [ -n "${platform}" -a "${COMPILER_version}" != "Unknown_Compiler" ]; then
        export GEM_ARCH=${platform}-${COMPILER_suite}-${COMPILER_version}
        export GEM_WORK=work-${GEM_ARCH}
        
        if [ -n "${storage_model}" ] ; then
            GEM_DIR=${storage_model}/goas/$(basename $PWD)_${GEM_ARCH}
        else
            GEM_DIR=${PWD}
        fi
        export GEM_DIR
        export GEM_GIT_DIR=$PWD
        if [ -h ${GEM_GIT_DIR}/gem_dbase ] ; then
            export ATM_MODEL_DFILES=${GEM_GIT_DIR}/gem_dbase
        else
            echo "Database not found! Please install GEM database in the current directory, or add a link to where it is installed."
        fi
        export AFSISIO=${ATM_MODEL_DFILES}
        export PATH=${PWD}/${GEM_WORK}/scripts:${PWD}/${GEM_WORK}/bin:${PATH}
        export TMPDIR=${TMPDIR-$(mktemp -d /tmp/$USER-XXXX)}
    fi
fi

unset platform

